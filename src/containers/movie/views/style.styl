movie-color = #333
movie-open-bg-color = #fff
movie-border-color = #ccc
movie-open-border-color = #90A4AE

.movie
  position relative
  display flex
  align-items center
  justify-content flex-start
  padding 8px 20px

  letter-spacing normal
  color movie-color
  transition transform .4s

  &__icon
    display inline-flex
    margin-right 10px
    color #42A5F5

  &__title
    display flex
    align-items center
    justify-content flex-start
    flex-basis 250px
    flex-shrink 0
    min-width 0
    font-weight: normal

    span
      text-overflow ellipsis
      overflow hidden
      white-space nowrap

  &__subtitle
    display none
    color #42A5F5;
    font-size 12px
    font-weight: bold
    text-transform uppercase

  &__release
  &__format
    display inline-flex
    justify-content center
    flex-basis 100px
    flex-shrink 0
    margin-left 10px
    border-left 2px solid #ccc

  &__format
    border-right 2px solid #ccc
    margin-right 15px

  &__stars
    flex-grow 1
    text-align left
    text-overflow ellipsis
    overflow hidden
    white-space nowrap

    .movie__subtitle
      display inline-flex
      margin-right 5px

  &:hover
    cursor pointer

.movie__btn-trash.btn
  display none
  position absolute
  right 20px
  color #666

.movie:not(.movie-open):hover
  background-color rgba(144, 164, 174, .1)

  .movie__stars
    padding-right 40px
  .movie__btn-trash
    display inline-flex

.movie-open
  justify-content space-between
  flex-wrap wrap
  padding 0

  background movie-open-bg-color
  border 2px solid movie-open-border-color
  transform scale(1.03)
  z-index 100

  .movie__title
    flex-basis 100%
    justify-content center
    min-height 40px
    text-transform uppercase
    white-space normal
    font-weight 700

  .movie__subtitle
    display inline-flex

  .movie__format
  .movie__release
    flex-basis 100%
    margin 0
    padding 10px
    border none
    border-top 1px solid movie-border-color

    .movie__subtitle
      margin-right 10px

  .movie__format
    border-bottom 1px solid movie-border-color

  .movie__stars
    flex-basis 100%
    padding 10px 20px
    text-align center
    line-height 1.4
    white-space normal

    .movie__subtitle
      font-size: 14px

  .movie__btn-trash
    display flex
    top 10px
